{
  "env": {
    "node": true,
    "browser": false,
    "es6": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-trailing-spaces": ["error"],
    "prefer-template": ["error"],
    "eol-last": ["error", "always"],
    "no-unreachable": ["error"],
    "no-path-concat": ["error"]
  }, 
  "parserOptions": {
    "ecmaVersion": 2017
  }
}