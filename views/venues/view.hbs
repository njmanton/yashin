<section class="row">

  <section class="sideteam col-md-4 col-lg-3">
    
    <h3>{{ venue.stadium }}</h3>
    <p>{{ venue.city }}</p>
    <p>{{ venue.capacity }}</p>
    
  </section>

  <section class="col">

    <table class="table">
      <thead>
        <tr>
          <th>Date <small>(<acronym title="British Summer Time">BST</acronym>)</small></th>
          <th>Stage</th>
          <th>&nbsp;</th>
          <th>Result</th>
          <th>&nbsp;</th>
          <th>&nbsp;</th>
        </tr>
      </thead>
      <tbody>
        {{#each matches }}
        <tr>
          <td class="date" data-ld="{{ date }}"><span>{{ sdate }}</span></td>
          <td>{{ groupPrefix stage }}</td>
          {{#unless teama.id }}
            <td>{{ teama.name }}</td>
          {{ else }}
            <td><span class="flag-icon flag-icon-{{ teama.flag }}"></span> <a href="/teams/{{ teama.id }}">{{ teama.name }}</a></td>
          {{/unless }}
          <td>{{ result }}</td>
          {{#unless teamb.id }}
            <td>{{ teamb.name }}</td>
          {{ else }}
            <td><a href="/teams/{{ teamb.id }}">{{ teamb.name }}</a> <span class="flag-icon flag-icon-{{ teamb.flag }}"></span></td>
          {{/unless }}        
          <td><a href="/matches/{{ id }}"><i class="fas fa-eye"></i></a></td>
        </tr>
        {{/each }}
      </tbody>
    </table>

  </section>



</section>
