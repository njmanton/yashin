<section>
  
  <h4>Teams</h4>

  <table class="table">
    <thead>
      <tr>
        <th>Team</th>
        <th>Group</th>
        <th>Coach</th>
        <th>Ranking</th>
        <th>Confederation</th>
      </tr>
    </thead>
    <tbody>
      {{#each data }}
      <tr>
        <td><span class="flag-icon flag-icon-{{ sname }}"></span> <a href="/teams/{{ id }}">{{ name }}</a></td>
        <td>{{ group }}</td>
        <td>{{ coach }}</td>
        <td>{{ ranking }}</td>
        <td>{{ confederation }}</td>
      </tr>
      {{/each }}
    </tbody>
  </table>
</section>