<section class="row content">
  <div class="col-sm-10 col-md-3 col-md-offset-2 col-sm-offset-1">
    <form action="/login" method="post">
      <fieldset class="login form-group">
        <label for="username">username</label>
        <input aria-required="true" class="form-control" type="text" placeholder="username (3-25 characters)" pattern="^\S{3,25}$" name="username"/><br />
        <label for="password">password</label>
        <input aria-required="true" type="password" class="form-control" placeholder="password (minimum 8 characters)" name="password"/><br />
        <input type="submit" class="form-control btn btn-sm btn-primary" value="Log In"/>
      </fieldset>
    </form>
  </div>
  <div class="col-sm-10 col-md-3 col-sm-offset-1">
    <a class="btn btn-social btn-facebook" href="/auth/facebook">
      <span class="fab fa-facebook-square"></span> Login with Facebook
    </a><br />
    <a class="btn btn-social btn-google" href="/auth/google">
      <span class="fab fa-google"></span> Login with Google
    </a>
    <div>
      <small><a href="users/forgot">Forgot</a> your password?</small>
    </div> 
  </div>
</section>