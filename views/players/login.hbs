<section class="row content justify-content-center">
  <div class="col-sm-10 col-md-5">
    <h2>Login</h2>
    <form action="/login" id="login" method="post">
      <fieldset class="login form-group">
        <input autocapitalize="off" aria-required="true" class="form-control" type="text" placeholder="username" pattern="^\S{3,25}$" name="username"/>
        <input aria-required="true" type="password" class="form-control" placeholder="password" name="password"/>
        <input type="submit" class="form-control btn btn-sm btn-primary" value="Log In" />
      </fieldset>
    </form>
    <a class="btn btn-social btn-facebook" href="/auth/facebook">
      <span class="fab fa-facebook-square"></span> Login with Facebook
    </a><br />
    <a class="btn btn-social btn-google" href="/auth/google">
      <span class="fab fa-google"></span> Login with Google
    </a>
    <div>
      <small><a href="users/forgot">Forgot</a> your password?</small>
    </div> 
  </div>
</section>
