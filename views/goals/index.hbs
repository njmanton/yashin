<section class="content row justify-content-center">
  <div class="col-md-8">
    <h2>Goals</h2>
    <table class="table list">
      <thead>
        <tr>
          <th>Player</th>
          <th>Team</th>
          <th>Time</th>
          <th>Opponents</th>
          <th style="width: 2em;">&nbsp;</th>
        </tr>
      </thead>
      <tbody>
        {{#each data }}
        <tr>
          <td>{{ scorer }}</td>
          <td><span class="flag-icon flag-icon-{{ [team.sname] }}"></span> {{ [team.name] }}</td>
          <td>{{ time }}{{#if tao }}+{{ tao }}{{/if }}' {{#if type }}({{ type }}){{/if }}</td>
          <td><span class="flag-icon flag-icon-{{ oppoflag }}"></span> {{ oppo }}</td>
          <td><a href="/matches/{{ [match.id] }}"><i class="fas fa-eye"></i></a></td>
        </tr>
        {{/each }}
      </tbody>
    </table>    
  </div>
</section>
