<section class="content row justify-content-center">
  <div class="col-md-8">
    <h2>Goals</h2>

    <ul class="nav nav-tabs" role="tablist">
      <li class="nav-item">
        <a id="scorers-tab" role="tab" aria-controls="scorers" data-toggle="tab" class="nav-link active" href="#scorers">Scorers</a>
      </li>
      <li class="nav-item">
        <a id="all-tab" role="tab" aria-controls="all" data-toggle="tab" class="nav-link" href="#all">All goals</a>
      </li>
    </ul>

    <div class="tab-content">
      <div class="tab-pane fade show active" role="tabpanel" aria-labelledby="scorers-tab" id="scorers">
        <table class="table list">
          <thead>
            <tr>
              <th>Player</th>
              <th>Goals</th>
            </tr>
          </thead>
          <tbody>
            {{#each scorers }}
            <tr>
              <td><span class="flag-icon flag-icon-{{ sname }}"></span> {{ scorer }}</td>
              <td>{{ cnt }}</td>
            </tr>
            {{/each }}
          </tbody>
        </table>
      </div>      
      <div class="tab-pane fade" role="tabpanel" aria-labelledby="all-tab" id="all">
        <table class="table list">
          <thead>
            <tr>
              <th>Player</th>
              <th>Team</th>
              <th>Time</th>
              <th>Opponents</th>
              <th style="width: 2em;">&nbsp;</th>
            </tr>
          </thead>
          <tbody>
            {{#each data }}
            <tr>
              <td>{{ scorer }}</td>
              <td><span class="flag-icon flag-icon-{{ [team.sname] }}"></span> {{ [team.name] }}</td>
              <td>{{ time }}{{#if tao }}+{{ tao }}{{/if }}' {{#if type }}({{ type }}){{/if }}</td>
              <td><span class="flag-icon flag-icon-{{ oppoflag }}"></span> {{ oppo }}</td>
              <td><a href="/matches/{{ [match.id] }}"><i class="fas fa-eye"></i></a></td>
            </tr>
            {{/each }}
          </tbody>
        </table>
      </div>
    </div>

  </div>
</section>
